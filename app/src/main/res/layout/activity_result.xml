<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- ImageView để hiển thị ảnh kết quả -->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerInside"
            android:contentDescription="Hình ảnh bệnh"
            android:background="#E0E0E0" />

        <!-- Kết quả phân loại -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Kết quả"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tvPrediction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Unknown"
            android:textSize="16sp" />

        <!-- Cách trị -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Cách trị"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tvTreatment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text=""
            android:textSize="16sp" />

        <!-- Sản phẩm khuyến nghị -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Sản phẩm khuyến nghị"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tvMedicine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text=""
            android:textSize="16sp" />

        <!-- Thông báo lưu ảnh -->
        <TextView
            android:id="@+id/tvImageSaved"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text=""
            android:textSize="14sp"
            android:gravity="center"
            android:background="#E8F5E9"
            android:padding="8dp"
            android:visibility="gone" />

        <!-- Các nút điều hướng -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp">

            <Button
                android:id="@+id/btnBack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quay lại"
                android:backgroundTint="#00C853"
                android:textColor="#FFFFFF"
                android:padding="12dp" />

            <Button
                android:id="@+id/btnViewInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Xem thông tin"
                android:backgroundTint="#00C853"
                android:textColor="#FFFFFF"
                android:layout_marginTop="8dp"
                android:padding="12dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
