<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- TextView cho tiêu đề Lịch sử -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lịch sử"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- ImageView để hiển thị ảnh kết quả -->
        <ImageView
            android:id="@+id/image_result"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:background="@android:color/darker_gray" />

        <!-- TextView cho nhãn thời gian -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Thời gian"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- EditText để nhập thời gian -->
        <TextView
            android:id="@+id/tv_time_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thông tin chi tiết về thời gian sẽ hiển thị ở đây."
            android:textSize="16sp"
            android:layout_marginTop="4dp" />

        <!-- TextView cho tiêu đề Kết quả -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Kết quả"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- TextView để hiển thị thông tin kết quả -->
        <TextView
            android:id="@+id/tv_result_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thông tin chi tiết về kết quả sẽ hiển thị ở đây."
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

        <!-- TextView cho tiêu đề Cách trị -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cách trị"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp" />

        <!-- TextView để hiển thị thông tin cách trị -->
        <TextView
            android:id="@+id/tv_treatment_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thông tin chi tiết về cách trị sẽ hiển thị ở đây."
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

        <!-- Sử dụng một LinearLayout để chứa TextView "Thuốc đặc trị" và ImageView ngang nhau -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp">
            <ImageView
                android:id="@+id/image_medicine"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@android:drawable/ic_menu_camera"
                android:layout_gravity="center_vertical" />
            <!-- TextView cho tiêu đề Thuốc đặc trị -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thuốc đặc trị"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginEnd="8dp" />

            <!-- ImageView để hiển thị hình ảnh thuốc đặc trị -->
        </LinearLayout>

        <!-- TextView để hiển thị thông tin Thuốc đặc trị -->
        <TextView
            android:id="@+id/tv_medicine_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thông tin chi tiết về thuốc đặc trị sẽ hiển thị ở đây."
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

        <!-- Nút Quay lại -->
        <Button
            android:id="@+id/btn_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quay lại"
            android:textSize="20sp"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/green"
            android:padding="12dp" />

        <!-- Nút Trang chủ -->
        <Button
            android:id="@+id/btn_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trang chủ"
            android:textSize="20sp"
            android:backgroundTint="@color/green"
            android:layout_marginTop="8dp"
            android:padding="12dp" />

    </LinearLayout>
</ScrollView>
